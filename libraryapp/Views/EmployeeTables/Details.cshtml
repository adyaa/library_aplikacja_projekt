@model DatabaseModel.EmployeeTable

@{
    ViewBag.Title = "Pracownicy > Szczegóły";
}



<div>

    <dl class="dl-horizontal">
        <dt>
            Typ użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            Imię i nazwisko pracownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Imię ojca pracownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FatherName)
        </dd>

        <dt>
            Kontakt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNo)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Adres
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            Opis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Dział biblioteki
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentTable.Name)
        </dd>

        <dt>
            Oznaczenie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DesignationTable.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.EmployeeID }, new { @class = "btn btn-info" })
    @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-primary" })
</p>

