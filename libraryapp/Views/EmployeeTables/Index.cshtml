@model IEnumerable<DatabaseModel.EmployeeTable>

@{
    ViewBag.Title = "Użytkownicy > Lista pracowników";
}

@Html.ActionLink("Nowy", "Create", null, new { @class = "btn btn-success" })
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista pracowników</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Imię i nazwisko
                        </th>
                        <th>
                            Kontakt
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Adres
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Opis
                        </th>
                        <th>
                            Dział biblioteki
                        </th>
                        <th>
                            Akcje
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentTable.Name)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edytuj", "Edit", new { id = item.EmployeeID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Szczegóły", "Details", new { id = item.EmployeeID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Usuń", "Delete", new { id = item.EmployeeID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>