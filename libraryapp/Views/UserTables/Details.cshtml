@model DatabaseModel.UserTable

@{
    ViewBag.Title = "Użytkownicy > Szczegóły";
}


<div>
    <dl class="dl-horizontal">
        <dt>
            Login Użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Hasło użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            Status użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            Imię i nazwisko użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmployeeTable.FullName)
        </dd>

        <dt>
            Typ użytkownika
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserTypeTable.UserType)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.UserID }, new { @class = "btn btn-info" })
    @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-primary" })
</p>

